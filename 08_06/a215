
#include <stdio.h>

#include <stdlib.h>

#include <string.h>


int main()

{


    int n;
    int m;
    int i;
    int s;



    while(scanf("%d%d",&n,&m)!=EOF){

        s=n;i=1;

        while(s<=m)

        {

            s+=n+1;

            n=n+1;

            i++;

        }printf("%d\n",i);

    }



    return 0;

}


